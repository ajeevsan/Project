      var z = document.getElementById("btn");
      let btn1 = document.getElementsByClassName("toogle-btn")[0];
      let btn2 = document.getElementsByClassName("toogle-btn")[1];
      let login_bool = false;
      let reg_bool = false;
      
      function register() {
        x.style.left = "-400px";
        y.style.left = "50px";
        z.style.left = "110px";
        z.style.color = "white";
      }
      function login() {
        x.style.left = "50px";
        y.style.left = "450px";
        z.style.left = "0px";
      }

      let pass1 = document.getElementById("reg-password").value;
      let pass2 = document.getElementById("reg-conf-password").value;

