<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  <link rel="stylesheet" href="/css/admin-profile.css" />
  <link rel="shortcut icon" href="/images/Vector.svg" type="svg" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>
  <div class="container">
    <img src="/images/Logo.svg" class="logo-img" alt="logo-img">
    <a href="/" class="logout" style="float: right; text-decoration: none; color: #009BA0;">Log Out</a>
    <div class="admin-data">
      <p class="name">
        <%= fname %>
      </p>
      <p class="email">
        <%= email %>
      </p>
    </div>

    <div class="table-head">
      <h4>User Requests</h4>
    </div>
    <a href="/admin-profile" class="logout" style="float: right; text-decoration: none; color: #009BA0;">Refresh Data</a>
    <section class="table">
      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>Tree ID</th>
              <th>Tree Name</th>
              <th>Date</th>
              <th>Owner Name</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <% if (tdata.length !=0){ %>
              <% for (let i=0; i<tdata.length;i++) {%>
                <tr>
                  <td>
                    <%= tdata[i].tid %>
                  </td>
                  <td>
                    <%= tdata[i].tname%>
                  </td>
                  <td>
                    <%= tdata[i].date %>
                  </td>
                  <td>
                    <%= tdata[i].name %>
                  </td>
                </tr>
                <% } %>
                  <% } else {%>
                    <tr>
                      <td>No Data!</td>
                      <td>No Data!</td>
                      <td>No Data!</td>
                      <td>No Data!</td>
                    </tr>
                    <% } %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
  <div>
    <div class="container data-entry">
      <h4> Profile Entry</h4>
      <form action="/data-entry" method="post" enctype='multipart/form-data'>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Tree ID</label>
          <input type="text" required name="tid" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Tree Name</label>
          <input type="text" name="tname" required class="form-control" />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Owner Name</label>
          <input type="text" name="oname" required class="form-control" />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Date of Plantation</label>
          <input type="date" name="pdate" required class="form-control" />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Location</label>
          <input type="text" name="location" required class="form-control" />
        </div>
        <div class="mb-3">
          <label for="formFile" class="form-label">Upload Plant IMG</label>
          <input type="file" class="form-control" id="exampleFormControlInput1" name="image">
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Volunteer Email</label>
          <input type="email" name="email" required class="form-control" />
        </div>
        <button type="submit" class="add-vol btn btn-primary">Add to Profile</button>
      </form>
    </div>

    <div class="container volunteer-details">
      <h4>List of Volunteers</h4>
      <section class="table">
        <div class="tbl-header">
          <table cellpadding="0" cellspacing="0" border="0">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
              </tr>
            </thead>
          </table>
        </div>
        <div class="tbl-content">
          <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
              <tr>
                <% if(volData.length !==0) { %>
                  <% for(let i=0;i<volData.length;i++) { %>
              <tr>
                <td>
                  <%= volData[i].fname + " " + volData[i].lname %>
                </td>
                <td>
                  <%= volData[i].volEmail %>
                </td>
              </tr>
              <% } %>
                <% } else {%>
                  <tr>
                    <td>No Data!</td>
                    <td>No Data!</td>
                  </tr>
                  <% } %>
                    </tr>
            </tbody>
          </table>
        </div>
      </section>
    </div>
    <div class="cotainer notice-box">
      <div class="mb-3">
        <form class="admin_profile" action="/sendNotice" method="post">
          <label for="exampleFormControlTextarea1" class="form-label">Notice</label>
          <textarea class="form-control" id="textarea" name="notice" rows="3"></textarea>
          <!-- <button type="button" class="message-btn btn btn-outline-secondary">Edit</button> -->
          <button type="submit" class="message-btn btn btn-outline-secondary">Send</button>
        </form>
      </div>
    </div>
    <script src="/js/dataEntry.js"></script>
</body>

</html>